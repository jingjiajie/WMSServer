<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:tx="http://www.springframework.org/schema/tx"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx.xsd">

    <import resource="classpath:dataSourceBean.xml"/>

    <bean id="sessionFactory" class="org.springframework.orm.hibernate5.LocalSessionFactoryBean" lazy-init="false">
        <!--<property name="configLocation" value="classpath:hibernate.cfg.xml"/>-->
        <property name="dataSource" ref="dataSource"/>
        <property name="hibernateProperties">
            <props>
                <prop key="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</prop>
                <prop key="hbm2ddl.auto">validate</prop>
            </props>
        </property>
        <property name="annotatedClasses">
            <list>
                <value>com.wms.services.warehouse.model.AccountTitle</value>
                <value>com.wms.services.warehouse.model.BarCode</value>
                <value>com.wms.services.warehouse.model.DeliveryOrder</value>
                <value>com.wms.services.warehouse.model.DeliveryOrderItem</value>
                <value>com.wms.services.warehouse.model.InspectionNote</value>
                <value>com.wms.services.warehouse.model.InspectionNoteItem</value>
                <value>com.wms.services.warehouse.model.Material</value>
                <value>com.wms.services.warehouse.model.Package</value>
                <value>com.wms.services.warehouse.model.PackageItem</value>
                <value>com.wms.services.warehouse.model.Person</value>
                <value>com.wms.services.warehouse.model.SafetyStock</value>
                <value>com.wms.services.warehouse.model.StockRecord</value>
                <value>com.wms.services.warehouse.model.StockTakingOrder</value>
                <value>com.wms.services.warehouse.model.StockTakingOrderItem</value>
                <value>com.wms.services.warehouse.model.StorageArea</value>
                <value>com.wms.services.warehouse.model.StorageLocation</value>
                <value>com.wms.services.warehouse.model.Supplier</value>
                <value>com.wms.services.warehouse.model.Supply</value>
                <value>com.wms.services.warehouse.model.Tax</value>
                <value>com.wms.services.warehouse.model.TaxItem</value>
                <value>com.wms.services.warehouse.model.TransferOrder</value>
                <value>com.wms.services.warehouse.model.TransferOrderItem</value>
                <value>com.wms.services.warehouse.model.TransferRecord</value>
                <value>com.wms.services.warehouse.model.Warehouse</value>
                <value>com.wms.services.warehouse.model.WarehouseEntry</value>
                <value>com.wms.services.warehouse.model.WarehouseEntryItem</value>
                <value>com.wms.services.warehouse.model.AccountTitleView</value>
                <value>com.wms.services.warehouse.model.BarCodeView</value>
                <value>com.wms.services.warehouse.model.DeliveryOrderItemView</value>
                <value>com.wms.services.warehouse.model.DeliveryOrderView</value>
                <value>com.wms.services.warehouse.model.InspectionNoteItemView</value>
                <value>com.wms.services.warehouse.model.InspectionNoteView</value>
                <value>com.wms.services.warehouse.model.MaterialView</value>
                <value>com.wms.services.warehouse.model.PackageItemView</value>
                <value>com.wms.services.warehouse.model.PackageView</value>
                <value>com.wms.services.warehouse.model.PersonView</value>
                <value>com.wms.services.warehouse.model.SafetyStockView</value>
                <value>com.wms.services.warehouse.model.StockRecordView</value>
                <value>com.wms.services.warehouse.model.StockTakingOrderItemView</value>
                <value>com.wms.services.warehouse.model.StockTakingOrderView</value>
                <value>com.wms.services.warehouse.model.StorageAreaView</value>
                <value>com.wms.services.warehouse.model.StorageLocationView</value>
                <value>com.wms.services.warehouse.model.SupplierView</value>
                <value>com.wms.services.warehouse.model.SupplyView</value>
                <value>com.wms.services.warehouse.model.TaxItemView</value>
                <value>com.wms.services.warehouse.model.TaxView</value>
                <value>com.wms.services.warehouse.model.TransferOrderItemView</value>
                <value>com.wms.services.warehouse.model.TransferOrderView</value>
                <value>com.wms.services.warehouse.model.TransferRecordView</value>
                <value>com.wms.services.warehouse.model.WarehouseEntryItemView</value>
                <value>com.wms.services.warehouse.model.WarehouseEntryView</value>
                <value>com.wms.services.warehouse.model.WarehouseView</value>
            </list>
        </property>
    </bean>

    <bean id="transactionManager"
          class="org.springframework.orm.hibernate5.HibernateTransactionManager">
        <property name="dataSource" ref="dataSource"/>
        <property name="sessionFactory" ref="sessionFactory"/>
    </bean>
    <!--启动注解用注解来管理事务-->
    <tx:annotation-driven transaction-manager="transactionManager"/>
</beans>